{
  "name": "colorbuddy",
  "displayName": "Color Buddy - Your VS Code Color Companion",
  "description": "Adds color indicators and displays some useful info on hover anywhere a color code, cssclass or style containing a colordefinition or --variable is found. Helps you to quickly find and navigate to the color definition.",
  "version": "0.0.3",
  "publisher": "PAUlander",
  "repository": {
    "type": "git",
    "url": "https://github.com/pa-ulander/color-buddy"
  },
  "keywords": [
    "color",
    "colors",
    "rgb",
    "css",
    "hsl",
    "cmyk",
    "hex",
    "css",
    "scss",
    "sass",
    "less",
    "stylus",
    "html",
    "xml",
    "refactor",
    "refactoring",
    "accessability",
    "colorpicker",
    "tailwind",
    "markdown",
    "javascript",
    "design"
  ],
  "icon": "img/logoicon.png",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "colorbuddy.reindexCSSFiles",
        "title": "ColorBuddy: Re-index CSS Variables"
      },
      {
        "command": "colorbuddy.showColorPalette",
        "title": "ColorBuddy: Show Workspace Color Palette"
      },
      {
        "command": "colorbuddy.exportPerformanceLogs",
        "title": "ColorBuddy: Export Performance Logs"
      }
    ],
    "configuration": {
      "title": "ColorBuddy",
      "properties": {
        "colorbuddy.languages": {
          "type": "array",
          "description": "Language identifiers where ColorBuddy should detect colors and expose the color picker.",
          "items": {
            "type": "string"
          },
          "default": [
            "css",
            "scss",
            "sass",
            "less",
            "stylus",
            "postcss",
            "html",
            "xml",
            "svg",
            "javascript",
            "javascriptreact",
            "typescript",
            "typescriptreact",
            "vue",
            "svelte",
            "astro",
            "json",
            "jsonc",
            "yaml",
            "toml",
            "markdown",
            "mdx",
            "plaintext",
            "python",
            "ruby",
            "php",
            "perl",
            "go",
            "rust",
            "java",
            "kotlin",
            "swift",
            "csharp",
            "cpp",
            "c",
            "objective-c",
            "dart",
            "lua",
            "shellscript",
            "powershell",
            "sql",
            "graphql"
          ]
        },
        "colorbuddy.enablePerformanceLogging": {
          "type": "boolean",
          "description": "Enable detailed performance logging for diagnostics. Logs timing information for indexing, caching, and hover operations to the Output panel.",
          "default": false
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package-vsix": "npm run package && npx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.0",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@vscode/l10n": "^0.0.18"
  }
}